<p id="notice"><%= notice %></p>
<h1 class="text-center"><%= Coin.model_name.human(count: @coins.count)%></h1>
<table class="table table-hover">
  <thead>
    <tr>
      <th><%= @coins.human_attribute_name(:description) %></th>
      <th><%= @coins.human_attribute_name(:acronym) %></th>
      <th><%= @coins.human_attribute_name(:url_image) %></th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @coins.each do |coin| %>
      <tr>
        <td><%= coin.description %></td>
        <td><%= coin.acronym %></td>
        <td><%= image_tag coin.url_image, width: 50, height: 50 %></td>
        <td><%= link_to t('links.show'), coin, class:"btn btn-success" %></td>
        <td><%= link_to t('links.edit'), edit_coin_path(coin), class:"btn btn-warning" %></td>
        <td><%= link_to t('links.delete'), coin, method: :delete, data: { confirm: t('messages.confirm') }, class:"btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>
<div class="text-center">
  <%= link_to t('new.coin'), new_coin_path, class:"btn btn-primary" %>
</div>
<br>
<br>
<div class="text-center">
  <%= link_to t('links.back'), root_path, class:"btn btn-primary" %>
</div>
