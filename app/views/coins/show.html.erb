<p id="notice"><%= notice %></p>
<form>
  <div class="form-group text-center">
    <h2><%= label_tag nil, @coin.class.human_attribute_name(:description) %></h2>
    <%= text_field_tag nil, @coin.description, class:"form-control text-center", disabled: true %>
  </div>
  <br>
  <div class="form-group text-center">
    <h2><%= label_tag nil, @coin.class.human_attribute_name(:acronym)%></h2>
    <%= text_field_tag nil, @coin.acronym, class:"form-control text-center", disabled: true %>
  </div>
  <br>
  <div class="form-group text-center">
    <h2><%= label_tag nil, @coin.class.human_attribute_name(:url_image) %></h2>
    <%= image_tag @coin.url_image, width: 75, height: 75 %>
    <%= text_field_tag nil, @coin.url_image, class:"form-control text-center", disabled: true %>
  </div>
  <br>
  <div class="form-group text-center">
    <h2><%= label_tag nil,@coin.class.human_attribute_name(:mining_type) %></h2>
    <%= text_field_tag nil, @coin.mining_type.description, class:"form-control text-center", disabled: true %>
  </div>
</form>
<br>
<br>
<div class="text-center">
  <%= link_to t('links.edit'), edit_coin_path(@coin), class:"btn btn-primary" %>
</div>
<br>
<div class="text-center">
  <%= link_to t('links.back'), coins_path, class:"btn btn-primary" %>
</div>
